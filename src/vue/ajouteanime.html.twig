{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Ajouter un anime {% endblock %}

{% block contenu %} 

<div style="display: flex; justify-content: center; margin-top: 50px">
<form action="index.php?page=ajouteanime" method="post" enctype="multipart/form-data"  style="width: 50%;">

<input type="text" id="titre" name="titre" class="form-control" placeholder="Titre" required autofocus style="margin-bottom: 15px;"> </select>

<input type="text" id="description" name="description" class="form-control" placeholder="Description" required autofocus style="margin-bottom: 15px;"> </select>

<input type="number" id="nbsaison" name="nbsaison" class="form-control" placeholder="Nombre de saison" required autofocus style="margin-bottom: 15px;"> </select>

<input type="text" id="studioanime" name="studioanime" class="form-control" placeholder="Studio d'Animation" required autofocus style="margin-bottom: 15px;"> </select>

<input type="file" id="photo" name="photo" class="form-control" required autofocus style="margin-bottom: 15px;">

<select class="form-control" id="statut" name="statut" style="margin-bottom: 15px;">
   <option value="1">Termine</option>
   <option value="2">En cours</option>
   <option value="3">En pause</option>
</select>

<button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjouteranime" style="margin-top: 30px; margin-bottom: 30px; text-align: center;">Ajouter un anime</button>
</div>

</form>
{% endblock %} 